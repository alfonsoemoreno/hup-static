import Layout from "../../layouts/Layout.astro";

const site = Astro.site;
const pathWithBase = (path: string) =>
  site ? new URL(path, site).pathname : `/${path.replace(/^\/?/, "")}`;

const canonical = site ? new URL("en/", site).href : undefined;
const altEs = site ? new URL(".", site).href : "/";
const alternates = [
  { href: altEs, hreflang: "es" },
  { href: canonical ?? "/en/", hreflang: "en" },
];

const assetBase = pathWithBase("assets/");
const galleryItems = Array.from({ length: 33 }, (_, idx) => {
  const id = String(idx + 1).padStart(2, "0");
  return {
    id,
    src: `${assetBase}img/thumbs/Gallery-${id}.webp`,
    alt: `Photo ${id}`,
  };
});
